# MongoDB connection string shared by both API and bot containers.
ATLAS_URI="mongodb+srv://username:password@cluster.example.net/?retryWrites=true&w=majority"
# Optional aliases used by production docker-compose.yml
MONGO_URI="${ATLAS_URI}"
MONGODB_URI="${ATLAS_URI}"

# Logical database name used by the API when connecting to MongoDB.
DB_NAME="nonagon"

# Discord credentials
# BOT_TOKEN is required for the bot to authenticate with the gateway.
BOT_TOKEN="replace_with_discord_bot_token"
# BOT_CLIENT_ID is used when generating invite links.
BOT_CLIENT_ID="replace_with_discord_application_client_id"

# Optional demo configuration
DEMO_RESET_ENABLED="false"
DEMO_LOG_CHANNEL_ID=""

# Optional bridge for bot quest approvals
QUEST_API_BASE_URL="http://localhost:8000"
