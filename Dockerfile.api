FROM python:3.13-slim

WORKDIR /app

# Install dependencies using the project metadata and source.
COPY pyproject.toml README.md /app/
COPY src /app/src

RUN python -m pip install .

# Copy remaining project files (configs, tests, etc.).
COPY . .

EXPOSE 8000

CMD ["uvicorn","app.api.main:app","--host","0.0.0.0","--port","8000"]
